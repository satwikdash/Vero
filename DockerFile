# Use a stable Python version that supports aiortc + av
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install OS-level dependencies for PyAV, aiortc, and ffmpeg
RUN apt-get update && \
    apt-get install -y \
    ffmpeg \
    pkg-config \
    libavformat-dev \
    libavcodec-dev \
    libavdevice-dev \
    libavutil-dev \
    libavfilter-dev \
    libswscale-dev \
    libswresample-dev \
    libopus-dev \
    libvpx-dev && \
    rm -rf /var/lib/apt/lists/*

# Copy backend folder
COPY ci_bot/backend /app

# Install Python dependencies
RUN pip install --upgrade pip setuptools wheel
RUN pip install -r requirements.txt

# Expose Render's expected port
EXPOSE 10000

# Run FastAPI or your backend entry file
CMD ["python", "app.py"]
